<!doctype html>
<html lang="fr">

<head>
    <meta charset="utf-8">
    <title>Département Détails</title>
    <% include stylesheets %>
    <link rel="stylesheet" href="/assets/css/formations.css" />
</head>

<body>
    <% include header %>
    <main class="container">
        <div id="loader" class="text-center">
          <div class="spinner-border text-primary" role="status">
            <span class="sr-only">Loading...</span>
          </div>
        </div>
        <table id="schools_table" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th class="th-sm">Cursus

                    </th>
                    <th class="th-sm">Nom Filière

                    </th>
                    <th class="th-sm">Etablissement

                    </th>
                    <th class="th-sm">Région

                    </th>
                    <th class="th-sm">Département

                    </th>
                </tr>
            </thead>
            <tbody>

                <% datas.forEach(function(data){ %>
                <tr>

                    <td><%=data.fields.fili%></td>
                    <td> <a href="/schools/<%=data.fields.cod_uai%>/<%=data.recordid%>"><%=data.fields.fil_lib_voe_acc%> </a></td>
                    <td> <a href="/schools/<%=data.fields.cod_uai%>"><%=data.fields.g_ea_lib_vx%> </a></td>
                    <td><%=data.fields.lib_reg%></td>

                    <td> <a href="/departments/<%=data.fields.dep%>"><%=data.fields.lib_dep%></a></td>
                </tr>
                <% }); %>
            </tbody>
        </table>
    </main>
    <% include footer %>
    <% include scripts %>
    <script src="/assets/js/formations.js"></script>
</body>

</html>
